
<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h2>Create a new listing</h2>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" class="form-control" required>
        <div class="invalid-feedback">
            Title is required
          </div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"  class="form-control" required></textarea>
        <div class="invalid-feedback">
            description is required
          </div>
    </div>
    <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image </label>
        <input name="listing[image]" class="form-control" placeholder="enter image url" type="file" required>
    </div>
    <div class="mb-3">
         <label for="category">Choose a category:</label>
         <select name="listing[category]" id="category" required>
            <option value="">-- Select a category --</option>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic cities">Iconic cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Castles">Castles</option>
            <option value="Pools">Pools</option>
            <option value="Camping">Camping</option>
            <option value="Farms">Farms</option>
            <option value="Arctic">Arctic</option>
             </select>
    </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="Price" class="form-label" >Price</label>
                <input name="listing[price]" placeholder="enter your price" class="form-control" required>
                <div class="invalid-feedback">
                    price must be given
                  </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="enter your country" type="text" class="form-control" required>
                <div class="invalid-feedback">
                    country is required
                  </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label" >Location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
            <div class="invalid-feedback">
                Location is required
              </div>
        </div>
        <Button class="btn btn-dark add-btn">add</Button>
    </form>
</div>
</div>